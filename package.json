{
	"name": "@nuxthub/action",
	"description": "Deploy your Nuxt application to NuxtHub",
	"author": "NuxtHub",
	"version": "2.0.1",
	"license": "Apache-2.0",
	"homepage": "https://github.com/nuxt-hub/action",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nuxt-hub/action.git"
	},
	"bugs": {
		"url": "https://github.com/nuxt-hub/action/issues"
	},
	"keywords": ["actions", "nuxthub"],
	"type": "module",
	"files": ["dist"],
	"scripts": {
		"bundle": "pnpm run check:fix && pnpm run package",
		"check": "biome check",
		"check:fix": "biome check --write",
		"package": "tsdown"
	},
	"devDependencies": {
		"@actions/core": "^1.11.1",
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.15.29",
		"execa": "^9.6.0",
		"nuxthub": "^0.9.3",
		"ofetch": "^1.4.1",
		"picocolors": "^1.1.1",
		"pretty-bytes": "^7.0.1",
		"tsdown": "^0.14.1",
		"ufo": "^1.6.1"
	},
	"engines": {
		"node": ">=20"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@parcel/watcher",
			"esbuild",
			"unrs-resolver"
		],
		"patchedDependencies": {
			"npm-run-path@6.0.0": "patches/npm-run-path@6.0.0.patch",
			"unicorn-magic": "patches/unicorn-magic.patch"
		}
	}
}
