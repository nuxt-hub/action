{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"noImplicitAny": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"types": ["node"]
	},
	"include": ["src"]
}
